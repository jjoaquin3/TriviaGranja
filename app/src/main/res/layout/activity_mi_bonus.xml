<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/conteo_fondo"
    tools:context="com.example.joaquin.triviagranja.jordy.mi_bonus">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TableRow
            android:id="@+id/bonus_seccion_titulo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            >
            <LinearLayout
                android:layout_width="200sp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                >
            </LinearLayout>
            <TextView
                android:layout_width="0sp"
                android:layout_height="130sp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/mitex_bonus_titulo"
                android:background="@drawable/bonus_titulo" />
            <LinearLayout
                android:layout_width="200sp"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/bonus_seccion_t1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            >

            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                >
            </LinearLayout>

            <TextView
                android:layout_width="0sp"
                android:layout_height="120sp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/mitex_bonus_p"
                android:background="@drawable/bonus_p3" />

            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                >
            </LinearLayout>

        </TableRow>


        <TableRow
            android:id="@+id/bonus_seccion_t2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="50" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                ></LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                >


                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/Margen_Entre_Respuestas"
                    >

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:id="@+id/bonus_IVrespuesta1"
                        android:src="@drawable/checktrivia"
                        android:scaleType="fitCenter"
                        android:visibility="visible"
                         />

                    <TextView
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:id="@+id/bonus_IVrespuesta1_1"
                        android:gravity="center_vertical"
                        android:onClick="ask1"
                        />


                </TableRow>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                >
                <TableLayout
                    android:id="@+id/tableLayout1s2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/Margen_Entre_Respuestas"
                        >

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:id="@+id/bonus_IVrespuesta2_1"
                            android:src="@drawable/checktrivia"
                            android:scaleType="fitCenter"
                            android:visibility="visible"
                            />

                        <TextView
                            android:layout_width="150sp"
                            android:layout_height="wrap_content"
                            android:textSize="40sp"
                            android:id="@+id/bonus_IVrespuesta2_2"
                            android:gravity="center_vertical"
                            android:onClick="ask2"
                            />


                    </TableRow>

                </TableLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                ></LinearLayout>

        </TableRow>





        <TableRow
            android:id="@+id/bonus_seccion_t3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@android:color/transparent"
            >
            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                >
                <TextView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:gravity="center"
                    android:background="@drawable/puntos"
                    android:scaleType="fitCenter"
                    android:text="+100 pts"
                    android:textSize="35sp"
                    android:textColor="@android:color/holo_red_light"
                    android:id="@+id/bonus_TVpts" />
            </LinearLayout>

        </TableRow>


    </TableLayout>

</RelativeLayout>
