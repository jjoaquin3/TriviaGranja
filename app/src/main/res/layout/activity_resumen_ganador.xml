<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joaquin.triviagranja.jordy.resultados">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:background="@drawable/resultado_r2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:id="@+id/r_tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TableRow
            android:id="@+id/r_seccion_titulo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@android:color/transparent"
            >

        </TableRow>

        <TableRow
            android:id="@+id/r1_seccion_t1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            >


            <TextView
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/text_ganador_desc"
                android:scaleType="fitXY"

                android:paddingTop="70dp"
                android:paddingStart="100dp"
                android:paddingEnd="10sp"
                android:textAlignment="center"
                android:textColor="#ffffff" />

        <TableRow
            android:id="@+id/menu_seccion_returnd"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="100sp"
                android:layout_height="350sp"
                android:layout_weight="1"
                android:id="@+id/vista_premio"
                android:scaleType="fitCenter"
                android:src="@drawable/main_logo"


                android:paddingRight="180dp" />
        </TableRow>


        </TableRow>



    </TableLayout>





</RelativeLayout>
